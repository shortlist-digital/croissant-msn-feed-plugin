{
  "name": "shortlist-digital/croissant-msn-feed-plugin",
  "description": "RSS Feed for MSN",
  "type": "wordpress-muplugin",
  "require": {
    "composer/installers": "@stable",
    "doctrine/annotations": "^2.0",
    "psr/log": "^2.0"
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "require-dev": {
    "brain/monkey": "^2.6",
    "phpunit/phpunit": "^9.5",
    "phpunit/php-invoker": "^3.1",
    "mockery/mockery": "^1.6",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "2.3.0",
    "phpmd/phpmd": "2.*",
    "10up/wp_mock": "^1.0",
    "antecedent/patchwork": "^2.2",
    "symfony/polyfill-php72": "^1.31"
  },
  "autoload": {
    "psr-4": {
      "CroissantMSNFeed\\": "app/"
    }
  },
  "scripts": {
    "post-autoload-dump": "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "test": [
      "vendor/bin/phpunit --testdox",
      "vendor/bin/phpcs --standard=WordPress-Core --exclude=WordPress.PHP.YodaConditions,WordPress.Files.FileName app/",
      "vendor/bin/phpmd app text cleancode,codesize,design,unusedcode"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.packagist.com/shortlist-media/"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true
}
